<% if line_item == @current_item %>
  <tr id="current_item">
  <% else %>
    <tr>
    <% end %>
    <td>
      <%=image_tag(line_item.product.image_url,size: "24") %>
    </td>
    <td><%= line_item.quantity %>&times;</td>
    <td><%= line_item.product.title %></td>
    <td class="item_price"><%= number_to_currency(line_item.total_price) %></td>
    <td>
      <%= button_to "-1", line_item_decrement_path(id: line_item) , remote:true %>
    </td>
    <td>
      <%= button_to '+1', line_items_path(product_id: line_item.product), remote: true %>
    </td>
    <td>
      <%= button_to 'X', line_item, method: :delete, data: { confirm: 'Remove item from cart' } , remote:true %>
    </td>
  </tr>
